<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/black"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_similar"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:contentDescription="@string/todo_image_similar"
        android:scaleType="centerCrop"
        android:src="@drawable/vingadores" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title_similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Vingadores: Ultimato" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_overview_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/light_gray"
                android:textSize="14sp"
                tools:text="2019" />

            <TextView
                android:id="@+id/text_overview_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/light_gray"
                android:textSize="14sp"
                tools:text=" Ação, Ficção científica" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>